<%= form_for(bot_instance, url: url) do |f| %>
  <% if bot_instance.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(bot_instance.errors.count, "error") %> prohibited this bot from being saved:</h2>

      <ul>
        <% bot_instance.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p><strong>Bot:</strong><br/>
  <%= render 'bots/bot', bot: Bot.find(params[:bot_id]) %></p>

  <p><strong>Owner:</strong><br/> <%= bot_instance.user.present? ? bot_instance.user.username : current_user.username %></p>

  <div class="field">
    <%= f.label :location %><br/>
    <span class="text-muted"><em>Something that describes where this instance is running, e.g. <code>ArtOfCode/EC2</code></em></span>
    <%= f.text_field :location, :class => "form-control" %>
  </div><br/>

  <div class="actions">
    <%= f.submit "Save", :class => "btn btn-primary" %>
  </div>
<% end %>
